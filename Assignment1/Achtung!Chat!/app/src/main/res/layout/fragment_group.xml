<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Primary"
    tools:context="com.mattias.achtungchat.GroupFragment">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chat here"
        android:textColor="@color/Accent"
        android:id="@+id/button_chat1"
        android:onClick="Chat"
        android:layout_gravity="center_horizontal"
        android:background="@color/White"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chat there"
        android:textColor="@color/Accent"
        android:id="@+id/button_chat2"
        android:onClick="Chat"
        android:layout_gravity="center_horizontal"
        android:background="@color/White" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chat everywhere"
        android:textColor="@color/Accent"
        android:id="@+id/button_chat3"
        android:onClick="Chat"
        android:layout_gravity="center_horizontal"
        android:background="@color/White"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

</LinearLayout>
