<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.mattias.economics.ExpenseFragment">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Enter type of expense:"
    android:id="@+id/textViewExpenseType" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Eg bought a car"
    android:id="@+id/editTextExpenseTitle" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Enter amount:"
    android:id="@+id/textViewExpenseAmount" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/editTextExpenseAmount" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="65pt"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/buttonExpense"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show list of expenses"
        android:id="@+id/buttonListExpenses"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
